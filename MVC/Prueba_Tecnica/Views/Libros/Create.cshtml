@model Prueba_Tecnica.Models.libro_list
@{
    ViewData["Title"] = "Crear Libro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-sm-6">
            <h3>Crear un libro</h3>
        </div>
    </div>

    <div class="row">

        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Titulo" class="control-label"></label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="EditorialId" class="control-label"></label>
                    <select asp-for="EditorialId" class="form-control">
                        <option>Seleccione...</option>
                        @foreach (var item in Model.editoriales)
                        {
                            <option value="@item.Id">@item.Nombre</option>
                        }
                    </select>
                    <span asp-validation-for="EditorialId" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="autor" class="control-label"></label>
                    <select asp-for="autor" class="form-control">
                        <option>Seleccione...</option>
                        @foreach (var item in Model.autores)
                        {
                            <option value="@item.Id">@item.Nombre @item.Apellido</option>
                        }
                    </select>
                    <span asp-validation-for="autor" class="text-danger"></span>
                </div>



                <div class="form-group">
                    <label asp-for="Sinopsis" class="control-label"></label>
                    <input asp-for="Sinopsis" class="form-control" />
                    <span asp-validation-for="Sinopsis" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="n_paginas" class="control-label"></label>
                    <input asp-for="n_paginas" type="number" class="form-control" />
                    <span asp-validation-for="n_paginas" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>

            </form>
        </div>

    </div>

</div>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}